(define Petshop2
  (make-PetShop "Liga dos Pets" "Avenida Opal" 19122019 "Dr. Bruce" "Dr. Clark"))

(define Petshop3
  (make-PetShop "Bichos Mania" "Rua C, 789" 111222333 "Dr. Ana" "Dr. Carlos"))


